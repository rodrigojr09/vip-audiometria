{
	"name": "back-end",
	"version": "1.0.0",
	"main": "dist/index.js",
	"license": "MIT",
	"scripts": {
		"dev": "yarn build && cross-env NODE_ENV=development electron .",
		"build": "tsc",
		"start": "cross-env NODE_ENV=production electron .",
		"compile": "tsc && electron-builder --win --x64"
	},
	"devDependencies": {
		"@types/node": "^22.13.14",
		"cross-env": "^7.0.3",
		"electron": "^35.1.2",
		"electron-builder": "^26.0.12",
		"typescript": "^5.8.2"
	},
	"dependencies": {
		"@fastify/cors": "^11.0.1",
		"@fastify/static": "^8.1.1",
		"exceljs": "^4.4.0",
		"fastify": "^5.2.2",
		"moment-timezone": "^0.5.48",
		"socket.io": "^4.8.1",
		"xlsx-populate": "^1.21.0"
	},
	"build": {
		"appId": "vip.projeto.audiometria",
		"productName": "Audiometria",
		"files": [
			"assets",
			"dist/**/*",
			"views/**/*",
			"data/**/*"
		],
		"directories": {
			"buildResources": "assets",
			"output": "../Audiometria"
		},
		"win": {
			"icon": "assets/icon.ico"
		}
	}
}
